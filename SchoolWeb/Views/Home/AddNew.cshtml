@model SchoolWeb.ViewModel.SelectListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新增学生</title>
</head>
<body>
    <div>
        <form action="~/Home/AddNew" method="post">
            姓名：<input type="text" name="name" /><br />
            年龄：<input type="text" name="age" /><br />
